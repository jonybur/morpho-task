{
  "version": 2,
  "buildCommand": "npm run build && npm run build-storybook",
  "outputDirectory": ".next",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "storybook-static/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/storybook",
      "destination": "/storybook-static/index.html"
    },
    {
      "source": "/storybook/(.*)",
      "destination": "/storybook-static/$1"
    }
  ]
}
