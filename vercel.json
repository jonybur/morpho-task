{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build-storybook",
        "outputDirectory": "storybook-static",
        "distDir": "storybook-static"
      }
    }
  ],
  "routes": [
    {
      "src": "/storybook/(.*)",
      "dest": "/storybook-static/$1",
      "continue": true
    },
    {
      "src": "/storybook",
      "dest": "/storybook-static/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
